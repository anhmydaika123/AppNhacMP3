<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_background_banner">
    </View>
<ImageView
    android:scaleType="fitXY"
    android:id="@+id/imageViewBackgroundBanner"
    android:layout_width="match_parent"
    android:layout_height="200dp" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewBackgroundBanner"
        >
    <ImageView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/imageViewBanner"
        android:padding="2dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Lo yeu mat roi"
            android:id="@+id/textViewTitleBannerBaiHat"
            android:layout_toRightOf="@id/imageViewBanner"
            android:layout_alignTop="@+id/imageViewBanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imageViewBanner"
            android:layout_below="@id/textViewTitleBannerBaiHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewNoiDung"
                android:textColor="#fffdfc"
                android:textSize="13sp"
                android:text="Chào bạn đến với các ca khúc của các ca sĩ nổi tiến"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>