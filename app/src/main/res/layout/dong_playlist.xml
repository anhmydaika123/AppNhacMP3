<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewBackgroundPlaylist"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/imageViewPlayList"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@id/imageViewBackgroundPlaylist"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:elevation="6dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/txtTenPlayList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageViewPlayList"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/imageViewPlayList"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Những bài hát hay"
                android:textColor="#ffff"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    
</RelativeLayout>